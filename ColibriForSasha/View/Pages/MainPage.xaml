<Page x:Class="ColibriForSasha.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColibriForSasha.View.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Интернет-магазин Colibris"
                   HorizontalAlignment="Center"
                   FontSize="40"  Grid.ColumnSpan="3"
                   FontWeight="Bold"/>
        <TextBlock Text="Если вы устали от поисков недорогой, стильной и качественной мебели, которая идеальным образом вписалась бы в интерьер вашей квартиры, тогда мы — это то, что вам действительно нужно. "
                   TextWrapping="Wrap" Grid.ColumnSpan="3" Grid.Row="2"
                   />
        <TextBlock Text="Что мы предлагаем" HorizontalAlignment="Center"
                   FontSize="30" Grid.Column="2" Grid.Row="4"
                   FontWeight="Bold"/>
        
        <TextBlock Text="Фото покупателей" HorizontalAlignment="Center"
                   FontSize="30"  Grid.Row="4"
                   FontWeight="Bold"/>
        <Grid Grid.Row="6" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Большой выбор" FontSize="25" FontWeight="Bold"/>

                    <TextBlock Text="В нашем интернет-магазине представлен самый широкий ассортимент мебели." FontSize="20" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Black" Grid.Column="4" BorderThickness="1" CornerRadius="10" Padding="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Надежность" TextWrapping="Wrap" FontSize="25" FontWeight="Bold"/>
                    <TextBlock Text="Мы поставляем продукцию только проверенных производителей." FontSize="20" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Black" Grid.Column="2" Grid.Row="2" BorderThickness="1" CornerRadius="10" Padding="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Экономия" TextWrapping="Wrap" FontSize="25" FontWeight="Bold"/>
                    <TextBlock Text="Обращайтесь к нам, если хотите приобрести качественную мебель по демократичным ценам!" FontSize="20" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Black" Grid.Row="2" BorderThickness="1" CornerRadius="10" Padding="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Гарантия и возврат" TextWrapping="Wrap" FontSize="25" FontWeight="Bold"/>
                    <TextBlock Text="При желании можете вернуть покупку в течение 25 дней после приобретения." FontSize="20" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </Grid>

        <Grid Grid.Row="6" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Image Source="/Resourse/MEBEL1.jpg" Stretch="Fill"   />
            <Image Source="/Resourse/MEBEL2.jpg"  Grid.Column="2" Stretch="Fill"   />
            <Image Source="/Resourse/MEBEL3.jpg" Grid.Row="2" Grid.Column="2" Stretch="Fill"   />
            <Image Source="/Resourse/MEBEL4.jpg" Grid.Row="2" Stretch="Fill"   />

            
        </Grid>

    </Grid>
</Page>
