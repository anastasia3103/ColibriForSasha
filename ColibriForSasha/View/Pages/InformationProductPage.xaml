<Page x:Class="ColibriForSasha.View.Pages.InformationProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColibriForSasha.View.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="720" d:DesignWidth="1280"
      Title="InformationProductPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="500" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid>
            <Button Name ="BackBtn" Width="150" 
            Content="Назад" HorizontalAlignment="Left" Click="BackBtn_Click"
            Background="Transparent" BorderBrush="Transparent"/>

            <TextBlock Text="Подробнее о товаре" 
           FontWeight="UltraLight"
           FontSize="35" HorizontalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Title}"
                       FontSize="35" Grid.ColumnSpan="2" FontWeight="Bold"/>

            <Image Grid.Row="2" Source="{Binding Photo}"/>

            <Grid Grid.Column="2" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="AUTO" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Price, StringFormat={}{0:C2}}" FontSize="40" Grid.Row="1" FontWeight="Medium"/>

                <Button Name="AddBtn" Grid.Row="3" Height="40" Width="200"
                HorizontalAlignment="Left" Content="Добавить" Click="AddBtn_Click"
                Grid.ColumnSpan="2"/>

                <TextBlock Text="{Binding Decscription}" VerticalAlignment="Top" TextWrapping="Wrap" FontSize="40" Grid.Row="5"/>

            </Grid>


        </Grid>


    </Grid>
</Page>
