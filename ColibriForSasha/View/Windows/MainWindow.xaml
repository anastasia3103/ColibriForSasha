<Window x:Class="ColibriForSasha.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColibriForSasha"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="820" MinWidth="1280"
WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="red">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Background="#F9EFE0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Image Source="/Resourse/ColibriLogo.png" Margin="-86,0,86,0" />

            <StackPanel  Grid.Column="4"
                Orientation="Horizontal" HorizontalAlignment="Center">

                <Button FontFamily="Myanmar Text"
                   FontWeight="DemiBold" Width="160" Name="MainBtn"
                Content="Главная" Click="MainBtn_Click"  Height="70"/>

                <Separator Height="0" Width="20"/>

                <Button FontFamily="Myanmar Text" 
                   FontWeight="DemiBold" Width="160" Name="ProductsBtn"
                Content="Товары" Click="ProductsBtn_Click"  Height="70"/>

                <Separator Height="0" Width="20"/>

                <Button FontFamily="Myanmar Text" 
                 FontWeight="DemiBold" Width="140" Name="ProfileBtn"
                Content="Профиль" Click="ProfileBtn_Click"  Height="70"/>
                
            </StackPanel>
        </Grid>
        <Frame Grid.Row="2" Name="MainUserFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
